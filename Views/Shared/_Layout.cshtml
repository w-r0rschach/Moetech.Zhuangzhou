@{ 
    List<MessageWarn> messageWarns = ViewData["MessageWarns"] as List<MessageWarn>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 虚拟机管理</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">GXLOGO</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="nav navbar-nav flex-grow-1">
                        @if (ViewBag.User != null)
                        {
                            @if (ViewBag.User.DepId == 0)
                            {
                                <li class="nav-item"><a class="navbar-brand" asp-area="" asp-controller="Vmware" asp-action="Index">申请虚拟机</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Vmware" asp-action="MyVmware">我的虚拟机</a></li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Vmware" asp-action="Index">申请虚拟机</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Vmware" asp-action="MyVmware">我的虚拟机</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Manage" asp-action="Index">管理虚拟机</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Manage" asp-action="Approve">审批虚拟机</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="PersonnelInfo" asp-action="Index">员工管理</a></li>
                            }
                        }
                    </ul>
                </div>

                <div class="collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @if (ViewBag.User == null)
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">登录</a></li>
                        }
                        else
                        {
                            @if (messageWarns != null)
                            {
                            <li class="nav-item dropdown">
                                <a class="nav-link" data-toggle="dropdown" href="#">
                                    <i class="far fa-comments"></i>
                                    <span class="badge badge-danger navbar-badge">@messageWarns.Count</span>
                                </a>
                       
                                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                    @for (int i = 0; i < messageWarns.Count; i++)
                                    {
                                        <a href="#" class="dropdown-item">
                                            <!-- 消息开始 -->
                                            <div class="media">
                                                <div class="media-body">
                                                    <h6 class="dropdown-item-title">
                                                        @messageWarns[i].MessageTitle
                                                    </h6>
                                                    <p style="font-size:12px;color:#a5a5a5">@messageWarns[i].MessageContent</p>
                                                    <p> @messageWarns[i].MessageWarnDate</p>
                                                </div>
                                            </div>
                                            <!-- 消息结束 -->
                                        </a>
                                    }
                                </div>
                            </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reset" asp-action="Reset">@ViewBag.User.PersonnelName</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="LoginOut">退出</a>
                            </li>
                            }
                        </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - 虚拟机管理系统
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/layer/layer.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
